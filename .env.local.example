# ============================================================================
# Its Different Productions - Environment Configuration
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control
# ============================================================================

# ============================================================================
# CORE APPLICATION SETTINGS
# ============================================================================

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DOCS_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# ============================================================================
# DATABASE & BACKEND (Supabase)
# ============================================================================

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database Connection (if needed for direct access)
# DATABASE_URL=postgresql://user:password@host:port/database

# ============================================================================
# DEPLOYMENT & HOSTING
# ============================================================================

# Vercel Configuration
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_main_project_id
VERCEL_DOCS_PROJECT_ID=your_docs_project_id

# Domain Configuration
DOMAIN=itsdifferentproductions.com
DOCS_SUBDOMAIN=docs
DOCS_DOMAIN=docs.itsdifferentproductions.com

# ============================================================================
# DNS PROVIDERS
# ============================================================================

# DNS Provider Selection (vercel, cloudflare, namecheap, godaddy, manual)
DNS_PROVIDER=vercel

# Cloudflare (if using Cloudflare DNS)
CLOUDFLARE_EMAIL=your-cloudflare-email
CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# Namecheap (if using Namecheap DNS)
NAMECHEAP_API_USER=your-namecheap-api-user
NAMECHEAP_API_KEY=your-namecheap-api-key
NAMECHEAP_CLIENT_IP=your-client-ip

# GoDaddy (if using GoDaddy DNS)
GODADDY_API_KEY=your-godaddy-api-key
GODADDY_API_SECRET=your-godaddy-api-secret

# ============================================================================
# PAYMENT PROCESSING
# ============================================================================

# NOW Payments (Cryptocurrency payments)
NOW_PAYMENTS_API_KEY=your-now-payments-api-key
NOW_PAYMENTS_IPN_SECRET=your-now-payments-ipn-secret
NOW_PAYMENTS_SANDBOX=true

# Stripe (Traditional payments - future implementation)
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ============================================================================
# WEB3 & BLOCKCHAIN
# ============================================================================

# Web3 Configuration
NEXT_PUBLIC_WEB3_NETWORK=mainnet
NEXT_PUBLIC_CHAIN_ID=1
NEXT_PUBLIC_RPC_URL=https://mainnet.infura.io/v3/your-infura-key

# Smart Contract Addresses
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=your-nft-contract-address
NEXT_PUBLIC_TOKEN_CONTRACT_ADDRESS=your-token-contract-address

# Wallet Connect
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Email Service (for notifications)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM_ADDRESS=noreply@itsdifferentproductions.com
EMAIL_FROM_NAME=Its Different Productions

# File Storage (if using external storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=your-s3-bucket-name

# CDN Configuration
CDN_URL=https://cdn.itsdifferentproductions.com

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Sentry (Error tracking)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# PostHog (Product analytics)
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================================================
# NOTIFICATIONS & WEBHOOKS
# ============================================================================

# Discord Integration
DISCORD_WEBHOOK_URL=your-discord-webhook-url
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-guild-id

# Slack Integration
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=your-slack-channel-id

# Email Notifications
NOTIFICATION_EMAIL=notifications@itsdifferentproductions.com

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=604800

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://itsdifferentproductions.vercel.app

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false

# Development Tools
NEXT_PUBLIC_SHOW_DEBUG_INFO=false
ENABLE_EXPERIMENTAL_FEATURES=false

# Testing
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_db

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Feature Toggles
FEATURE_NFT_MARKETPLACE=true
FEATURE_CRYPTO_PAYMENTS=true
FEATURE_WEB3_WALLET=false
FEATURE_ADMIN_DASHBOARD=false
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_SOCIAL_LOGIN=false

# ============================================================================
# THIRD-PARTY INTEGRATIONS
# ============================================================================

# Social Media APIs
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Music Services
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SOUNDCLOUD_CLIENT_ID=your-soundcloud-client-id

# ============================================================================
# BACKUP & RECOVERY
# ============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PROVIDER=aws

# ============================================================================
# PERFORMANCE & CACHING
# ============================================================================

# Redis (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cache Settings
CACHE_TTL=3600
ENABLE_CACHE=true

# ============================================================================
# LEGAL & COMPLIANCE
# ============================================================================

# Privacy & Terms
PRIVACY_POLICY_URL=https://itsdifferentproductions.com/privacy
TERMS_OF_SERVICE_URL=https://itsdifferentproductions.com/terms
COOKIE_POLICY_URL=https://itsdifferentproductions.com/cookies

# ============================================================================
# CONTACT & SUPPORT
# ============================================================================

# Support Information
SUPPORT_EMAIL=support@itsdifferentproductions.com
CONTACT_EMAIL=contact@itsdifferentproductions.com
BUSINESS_ADDRESS=548 Market St, San Francisco CA 94014

# ============================================================================
# DONATION & FUNDING
# ============================================================================

# Donation Information
SOLANA_DONATION_ADDRESS=h4shed.sol
DONATION_ENABLED=true

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
